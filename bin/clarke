#!/usr/bin/env ruby
# frozen_string_literal: true

require 'optparse'

require_relative '../lib/clarke'

options = {}
OptionParser.new do |opts|
  opts.banner = 'usage: clarke interpret [options] [filename]'

  opts.on('-v', '--[no-]verbose', 'Run verbosely') do |v|
    options[:verbose] = v
  end
end.parse!

if ARGV.size != 2
  warn 'usage: clarke interpret [filename]'
  exit 1
end

args = {
  cmd: ARGV[0],
  filename: ARGV[1],
}

case args.fetch(:cmd)
when 'interpret'
  code = File.read(args.fetch(:filename))
  Clarke.run(code, verbose: options[:verbose])
end
