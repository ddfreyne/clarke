#!/usr/bin/env ruby

require_relative '../lib/clarke'

if ARGV.size != 1
  $stderr.puts 'usage: clarke [filename]'
  exit 1
end

res = Clarke::Grammar::PROGRAM.apply(File.read(ARGV[0]))
case res
when DParse::Success
  evaluator = Clarke::Evaluator.new
  begin
    evaluator.eval_exprs(res.data)
  rescue Clarke::Evaluator::Error => e
    $stderr.puts "#{e.fancy_message}"
    exit 1
  end
when DParse::Failure
  $stderr.puts res.pretty_message
  exit 1
end
